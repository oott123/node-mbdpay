{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "lib": ["es2019", "dom"],
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "src/**/*.ts",
  ],
}
